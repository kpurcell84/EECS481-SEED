<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:padding="@dimen/default_padding"
    android:background="@drawable/seed_background"
    tools:context="edu.umich.seedforandroid.patient.daily_survey.DailySurvey">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#01275d"
        android:id="@+id/tvSurveyQuestion"
        android:text="Is your urine output significantly lower than usual?"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />

    <RelativeLayout
        android:id="@+id/relativelayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="3dp"
        android:layout_marginBottom="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <Button
            android:id="@+id/bContinueSurvey"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:background="@drawable/blue_button"
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSurveyQuestion"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="20dp"
        android:background="#F3F0EB">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:id="@+id/radioGroupSurvey">

            <RadioButton
                android:id="@+id/radioYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginRight="50dp"
                android:text="@string/survey_answer_yes"
                android:textSize="0sp" />

            <RadioButton
                android:id="@+id/radioNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="@string/survey_answer_no"
                android:textSize="0sp" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textSize="25sp"
            android:textColor="#01275d"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/radioGroupSurvey"
            android:id="@+id/tvYes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textSize="25sp"
            android:textColor="#01275d"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/radioGroupSurvey"
            android:id="@+id/tvNo" />
    </RelativeLayout>

</RelativeLayout>
