<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F3F0EB"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relativelayoutalert"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/imageLayout"
            android:layout_below="@+id/tvAlertType"
            android:padding="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textSize="18sp"
                android:id="@+id/tvAlertMessagePatient" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAlertMessagePatient"
                android:layout_marginTop="15dp"
                android:text="Time Alerted :"
                android:textSize="16sp"
                android:id="@+id/tvTimeAlertedStr" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTimeAlertedStr"
                android:text="2014 November 21, 1:30 PM"
                android:textSize="16sp"
                android:id="@+id/tvTimeAlerted" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="#d80000"
            android:layout_below="@+id/tvAlertType"
            android:id="@+id/imageLayout"
            android:layout_height="150dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewAlertType"
                android:src="@drawable/emergency_alert_square_icon"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tvAlertType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d80000"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="Emergency Detection"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>
