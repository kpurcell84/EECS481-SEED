<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/seed_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="seed.um.com.seed_andy.main.MainActivity">

    <RelativeLayout
        android:id="@+id/relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#A4A4A4"
        android:padding="1dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:background="#ffffff"
            android:id="@+id/etUsername"
            android:padding="10dp"
            android:hint="Email"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#A4A4A4"
        android:padding="1dp"
        android:layout_below="@+id/relativelayout1"
        android:layout_marginTop="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:background="#ffffff"
            android:id="@+id/etPassword"
            android:padding="10dp"
            android:hint="Password"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/relativelayout1"
        android:layout_below="@+id/tvSignup"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:padding="3dp"
        android:id="@+id/relativeLayout">

        <Button
            android:id="@+id/bLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:text="Log In"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/seed_system_logo_standalone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Need Help?"
        android:onClick="helpClicked"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you a doctor? Sign Up"
        android:id="@+id/tvSignup"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/relativelayout2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
