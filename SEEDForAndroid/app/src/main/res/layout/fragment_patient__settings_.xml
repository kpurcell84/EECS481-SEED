<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding"
    android:background="@drawable/seed_background"
    tools:context="seed.um.com.seed_andy.patient.fragments.Patient_Settings_Frag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#F3F0EB"
                android:padding="10dp"
                android:id="@+id/relativeLayoutTimeSlots"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="Health Data Logging\nand Questionnaire"
                    android:id="@+id/tvDailyLoggingandQuestionnaire"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:alpha="0.5"
                    android:layout_below="@+id/tvDailyLoggingandQuestionnaire"
                    android:text="You will receive a notification at these times to log blood pressure and body temperature, and to complete a survey about health conditions."
                    android:id="@+id/tvQuestionnaireDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Morning"
                    android:drawableStart="@drawable/morning_icon"
                    android:drawablePadding="10dp"
                    android:layout_below="@+id/tvQuestionnaireDescription"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:id="@+id/tvMorning"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00 AM"
                    android:layout_alignBaseline="@+id/tvMorning"
                    android:layout_alignParentRight="true"
                    android:textSize="20sp"
                    android:id="@+id/tvMorningTimeSlot"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00 PM"
                    android:layout_alignBaseline="@+id/tvEvening"
                    android:layout_alignParentRight="true"
                    android:textSize="20sp"
                    android:id="@+id/tvEveningTimeSlot"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Evening"
                    android:layout_below="@+id/tvMorning"
                    android:textSize="20sp"
                    android:drawableStart="@drawable/evening_icon"
                    android:drawablePadding="10dp"
                    android:id="@+id/tvEvening"/>

                <RelativeLayout
                    android:id="@+id/relativelayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvEvening"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:padding="3dp">

                    <Button
                        android:id="@+id/bUpdateSurveyTimeSlots"
                        android:layout_width="250dp"
                        android:layout_height="55dp"
                        android:padding="10dp"
                        android:drawableStart="@drawable/update_time_icon"
                        android:drawablePadding="5dp"
                        android:background="@drawable/blue_button"
                        android:text="Update Time Slots"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</FrameLayout>
