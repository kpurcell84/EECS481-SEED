<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/seed_background"
    tools:context="seed.um.com.seed_andy.doctor.fragments.Doctor_Profile_Frag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#F3F0EB"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:id="@+id/imageView2"
            android:src="@drawable/profile_icon"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:padding="10dp"
        android:id="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:id="@+id/tvDoctorName"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tvHospital"
            android:layout_below="@+id/tvDoctorName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:textSize="20sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/tvPhoneNumber"
            android:layout_below="@+id/tvEmail"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:id="@+id/tvEmail"
            android:gravity="center"
            android:layout_below="@+id/tvHospital"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout4"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#ffffff"
        android:padding="3dp"
        android:layout_marginTop="2dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/bLogoutDoctor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:text="Log Out"
            android:paddingStart="10dp"
            android:drawableLeft="@drawable/logout_icon"
            android:textColor="#FFFFFF"
            android:drawablePadding="-40dp"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#ffffff"
        android:padding="3dp"
        android:layout_above="@+id/relativelayout4">

        <Button
            android:id="@+id/bEditProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:text="Update Profile"
            android:paddingStart="10dp"
            android:drawableLeft="@drawable/update_profile_icon"
            android:textColor="#FFFFFF"
            android:drawablePadding="-40dp"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>
